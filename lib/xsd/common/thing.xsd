    <complexType name="Audit">
        <annotation>
            <documentation>
                <summary>
                    Represents an audit trail of creations or updates 
                    or deletes to information in the Health service.
                </summary>

                <remarks>
                   The audit records when the operation happened, 
                   by which application, and by which person.
                </remarks>
            </documentation>
        </annotation>
        <sequence>
            <element name="timestamp" type="dateTime" >
                <annotation>
                    <documentation>
                        <summary>
                            The time stamp of the audit.
                        </summary>

                        <remarks>
                            It is up to the application to convert the value 
                            to local time if needed.
                        </remarks>
                    </documentation>
                </annotation>
            </element>


            <element name="app-id" type="this:GuidAndName" >
                <annotation>
                    <documentation>
                        <summary>
                            The unique identifier and the name of 
                            the application used to perform the operation.
                        </summary>
                    </documentation>
                </annotation>
            </element>


            <element name="person-id" type="this:GuidAndName" >
                <annotation>
                    <documentation>
                        <summary>
                            The unique identifier and the name of
                            the person who performed the operation.
                        </summary>
                    </documentation>
                </annotation>
            </element>

            <element name="impersonator-id" type="this:GuidAndName" 
                     minOccurs="0" maxOccurs="1">
                <annotation>
                    <documentation>
                        <summary>
                            The unique identifier and the name of
                            the impersonator who performed the operation on 
                            behalf of the person.
                        </summary>
                        <remarks>
                            The impersonator performs the operation on behalf 
                            of the person.
                        </remarks>
                    </documentation>
                </annotation>
            </element>

            <element name="access-avenue" type="this:AccessAvenue" 
                     minOccurs="0" maxOccurs="1">
                <annotation>
                    <documentation>
                        <summary>
                            The access avenue used to perform the operation.
                        </summary>
                    </documentation>
                </annotation>
            </element>
            
            <element name="audit-action" type ="this:AuditAction" >
                <annotation>
                    <documentation>
                        <summary>
                            The action performed.
                        </summary>
                    </documentation>
                </annotation>
            </element>


        </sequence>
    </complexType>

